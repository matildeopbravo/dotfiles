#!/bin/bash

if [[ $# -eq 1 ]]; then
    sed -i "s|feh.*|feh --bg-fill $1|" ~/.config/i3/config
    i3-msg 'restart'
else
    DIR=~/Pictures/Wallpapers 
    length=`ls $DIR | wc -l`
    number=$(($RANDOM%$length))
    name=`ls $DIR | head -$number | tail -1`
    echo "$name"
    sed -i "s|feh.*|feh --bg-fill ~/Pictures/Wallpapers/$name|" ~/.dotfiles/i3/config 
    i3-msg 'restart'
fi
